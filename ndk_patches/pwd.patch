+static void android_setup_pwd(struct passwd* pw) {
+       static char realpath_buffer[4096/*PATH_MAX*/];
+       char* result = realpath("@TERMUX_HOME@/.termux/shell", realpath_buffer);
+       if (result == NULL || access(realpath_buffer, X_OK) == -1) {
